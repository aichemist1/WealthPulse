# Copy to scripts/pilot.env (this file is gitignored) and fill in values.
#
# Gmail SMTP (recommended for pilot):
WEALTHPULSE_SMTP_HOST=smtp.gmail.com
WEALTHPULSE_SMTP_PORT=587
WEALTHPULSE_SMTP_USE_STARTTLS=true
WEALTHPULSE_SMTP_USER=your@gmail.com
WEALTHPULSE_SMTP_PASSWORD=your_gmail_app_password
WEALTHPULSE_SMTP_FROM_EMAIL=your@gmail.com
WEALTHPULSE_SMTP_FROM_NAME=WealthPulse

# Demo DB (reuse across runs)
WEALTHPULSE_DB_URL=sqlite:////tmp/wealthpulse_demo.sqlite

# Used in confirm/unsubscribe links
WEALTHPULSE_PUBLIC_BASE_URL=http://localhost:8000

# SEC EDGAR requires a descriptive user agent with contact
WEALTHPULSE_SEC_USER_AGENT=WealthPulse (you@domain.com)

# Admin auth (recommended before cloud deploy)
# If unset/empty, /admin endpoints are not protected (local dev convenience).
WEALTHPULSE_ADMIN_PASSWORD=change_me
# Optional: separate signing secret for admin tokens (defaults to admin password)
WEALTHPULSE_ADMIN_TOKEN_SECRET=
