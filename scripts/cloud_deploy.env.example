# Copy to scripts/cloud_deploy.env (gitignored) and fill in values.
#
# Cloud-agnostic VM deploy via SSH.
# Works for AWS EC2 / GCP Compute Engine / any Ubuntu VM with SSH access.

# Required:
WEALTHPULSE_VM_HOST=1.2.3.4
WEALTHPULSE_VM_USER=ubuntu
WEALTHPULSE_VM_SSH_KEY=~/.ssh/id_rsa

# Optional:
# Remote install directory:
WEALTHPULSE_REMOTE_DIR=/opt/wealthpulse
# Set to "true" to run docker install steps (Ubuntu). Default: true.
WEALTHPULSE_INSTALL_DOCKER=true
# Provide a local prod env file to upload (recommended).
WEALTHPULSE_LOCAL_PROD_ENV=./prod.env

